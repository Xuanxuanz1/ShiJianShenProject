<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5">

    <TextView
        android:id="@+id/icc_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试用户名"
        android:textSize="@dimen/text_12"
        android:textColor="@color/light_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/icc_tv_view"
        />

    <TextView
        android:id="@+id/icc_tv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textStyle="bold"
        android:textSize="@dimen/text_12"
        android:textColor="@color/light_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icc_tv_name"
        app:layout_constraintRight_toLeftOf="@+id/icc_tv_message"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        />

    <TextView
        android:id="@+id/icc_tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icc_tv_view"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
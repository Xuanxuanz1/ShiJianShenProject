<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.user.UserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/auf_iv_head"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/head_01"
            app:roundPercent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试账号"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_head"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_28"
            />

        <TextView
            android:id="@+id/auf_tv_user_id_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="@dimen/text_14"
            android:textColor="#84c0be"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/auf_tv_user_name"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_head"
            />

        <TextView
            android:id="@+id/auf_tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textSize="@dimen/text_14"
            android:textColor="#84c0be"
            app:layout_constraintTop_toTopOf="@+id/auf_tv_user_id_hint"
            app:layout_constraintBottom_toBottomOf="@+id/auf_tv_user_id_hint"
            app:layout_constraintLeft_toRightOf="@+id/auf_tv_user_id_hint"
            />

        <TextView
            android:id="@+id/auf_tv_shop_number_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分："
            android:textSize="@dimen/text_14"
            android:textColor="#84c0be"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/auf_tv_user_id_hint"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_head"
            />

        <TextView
            android:id="@+id/auf_tv_shop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_14"
            android:textColor="#84c0be"
            app:layout_constraintTop_toTopOf="@+id/auf_tv_shop_number_hint"
            app:layout_constraintBottom_toBottomOf="@+id/auf_tv_shop_number_hint"
            app:layout_constraintLeft_toRightOf="@+id/auf_tv_shop_number_hint"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_change_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_top"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/auf_iv_change_user"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_change_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改个人信息"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_change_user"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_change_user"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_change_user"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_change_user"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/auf_iv_change_password"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_change_password"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_change_password"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_change_password"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_change_password">

        <ImageView
            android:id="@+id/auf_iv_sport"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/sport"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日步数打卡"
            android:textSize="@dimen/text_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_sport"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_sport"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_sport"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_sport"
        >

        <ImageView
            android:id="@+id/auf_iv_feedback"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/feedback"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_feedback"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_feedback"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_feedback"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_feedback"
        >

        <ImageView
            android:id="@+id/auf_iv_train"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/shop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分商城"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_train"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_train"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_train"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/auf_cl_train"
        >

        <ImageView
            android:id="@+id/auf_iv_about"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/about"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_about"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_about"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_about"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_cancle_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_1"
        app:layout_constraintBottom_toTopOf="@+id/auf_cl_exit">

        <ImageView
            android:id="@+id/auf_iv_cancle_user"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/cancel_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_cancle_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销用户"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_cancle_user"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_cancle_user"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_cancle_user"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auf_cl_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/auf_iv_exit"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/exit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auf_tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/auf_iv_exit"
            app:layout_constraintBottom_toBottomOf="@+id/auf_iv_exit"
            app:layout_constraintLeft_toRightOf="@+id/auf_iv_exit"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.changepassword.ChangePasswordActivity">

    <include
        layout="@layout/app_title"
        />

    <TextView
        android:id="@+id/acp_tv_password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原密码："
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/acp_et_password"
        app:layout_constraintBottom_toBottomOf="@+id/acp_et_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/acp_et_password"
        />

    <EditText
        android:id="@+id/acp_et_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_high"
        style="@style/spinner_1"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:background="#ebe8db"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/acp_tv_password_hint"
        />

    <TextView
        android:id="@+id/acp_tv_change_password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码："
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/acp_et_change_password"
        app:layout_constraintBottom_toBottomOf="@+id/acp_et_change_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/acp_et_change_password"
        />

    <EditText
        android:id="@+id/acp_et_change_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_high"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        style="@style/spinner_1"
        android:background="#ebe8db"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/acp_et_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/acp_tv_change_password_hint"
        />

    <TextView
        android:id="@+id/acp_tv_change_password_again_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认新密码："
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/acp_et_change_password_again"
        app:layout_constraintBottom_toBottomOf="@+id/acp_et_change_password_again"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/acp_et_change_password_again"
        />

    <EditText
        android:id="@+id/acp_et_change_password_again"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_high"
        style="@style/spinner_1"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:textSize="@dimen/text_16"
        android:background="#ebe8db"
        android:textColor="@color/light_black"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/acp_et_change_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/acp_tv_change_password_again_hint"
        />

    <Button
        android:id="@+id/acp_btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_high"
        style="@style/button_long"
        android:text="确认修改"
        android:textSize="@dimen/text_16"
        android:background="@color/tab_selected"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/acp_et_change_password_again"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
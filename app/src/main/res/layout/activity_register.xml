<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.register.RegisterActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        layout="@layout/app_title"
        />

    <TextView
        android:id="@+id/ar_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:textSize="@dimen/text_20"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_tv_title"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入账号"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_name"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入用户名（昵称）"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_pet_name"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_password"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_password_again"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入电话号码"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/ar_sp_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/spinner_1"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_phone"
        app:layout_constraintRight_toLeftOf="@+id/ar_sp_age_hint"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/ar_sp_age_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="岁"
        android:textSize="@dimen/text_16"
        app:layout_constraintLeft_toRightOf="@+id/ar_sp_age"
        app:layout_constraintTop_toTopOf="@+id/ar_sp_age"
        app:layout_constraintBottom_toBottomOf="@+id/ar_sp_age"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_30"
        />

    <TextView
        android:id="@+id/ar_tv_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        android:textSize="@dimen/text_14"
        style="@style/spinner_1"
        android:textColor="@color/light_black"
        android:text="请选择您的生日"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_7"
        app:layout_constraintTop_toBottomOf="@+id/ar_sp_age"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ar_tv_user_height_hint"
        app:layout_constraintTop_toBottomOf="@+id/ar_tv_birthday"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入身高"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/ar_tv_user_height_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textSize="@dimen/text_16"
        app:layout_constraintLeft_toRightOf="@+id/ar_el_user_height"
        app:layout_constraintTop_toTopOf="@+id/ar_el_user_height"
        app:layout_constraintBottom_toBottomOf="@+id/ar_el_user_height"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ar_el_user_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ar_tv_user_weight_hint"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_height"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ar_et_user_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@color/edit_text_bg"
            android:hint="请输入体重"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_16"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/ar_tv_user_weight_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="@dimen/text_16"
        app:layout_constraintTop_toTopOf="@+id/ar_el_user_weight"
        app:layout_constraintBottom_toBottomOf="@+id/ar_el_user_weight"
        app:layout_constraintLeft_toRightOf="@+id/ar_el_user_weight"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <Button
        android:id="@+id/ar_btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:text="注册"
        style="@style/button_long"
        android:textSize="@dimen/text_16"
        android:background="#f89155"
        app:layout_constraintTop_toBottomOf="@+id/ar_el_user_weight"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
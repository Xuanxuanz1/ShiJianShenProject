<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:background="@color/white">

    <TextView
        android:id="@+id/dacu_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系我们"
        android:textSize="@dimen/text_18"
        android:textColor="@color/light_black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/dacu_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如有问题请联系\n邮箱：598409738@qq.com"
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        app:layout_constraintTop_toBottomOf="@+id/dacu_tv_title"
        android:gravity="center|left"
        />

    <Button
        android:id="@+id/dacu_btn_cancle"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_high"
        style="@style/spinner_1"
        android:text="取消"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginRight="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@+id/dacu_tv_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dacu_btn_submit"
        />

    <Button
        android:id="@+id/dacu_btn_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_high"
        style="@style/spinner_1"
        android:text="确定"
        android:textSize="@dimen/text_16"
        android:textColor="@color/light_black"
        android:layout_marginLeft="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="@+id/dacu_btn_cancle"
        app:layout_constraintBottom_toBottomOf="@+id/dacu_btn_cancle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dacu_btn_cancle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
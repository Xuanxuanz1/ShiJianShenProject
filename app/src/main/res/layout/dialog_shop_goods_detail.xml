<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/dmseg_iv_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/ic_clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dmseg_tv_title_hint"
        />

    <TextView
        android:id="@+id/dmseg_tv_title_hint"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:text="商品详情"
        android:textSize="@dimen/text_18"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dmseg_iv_close"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dsgd_cl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dmseg_iv_close"
        >

        <ImageView
            android:id="@+id/dsgd_iv_head"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dsgd_tv_title"
            />

        <TextView
            android:id="@+id/dsgd_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="测试标题"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_iv_head"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/dsgd_tv_type_name_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品分类："
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/dsgd_tv_title"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_iv_head"
            />

        <TextView
            android:id="@+id/dsgd_tv_type_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="@+id/dsgd_tv_type_name_hint"
            app:layout_constraintBottom_toBottomOf="@+id/dsgd_tv_type_name_hint"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_tv_type_name_hint"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/dsgd_tv_qty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存数："
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toBottomOf="@+id/dsgd_tv_type_name_hint"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_iv_head"
            />

        <TextView
            android:id="@+id/dsgd_tv_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="@+id/dsgd_tv_qty_hint"
            app:layout_constraintBottom_toBottomOf="@+id/dsgd_tv_qty_hint"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_tv_qty_hint"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/dsgd_tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="测试内容"
            android:textColor="#687fa5"
            android:textSize="@dimen/text_16"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/dsgd_tv_qty_hint"
            app:layout_constraintLeft_toRightOf="@+id/dsgd_iv_head"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
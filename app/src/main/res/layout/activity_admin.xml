<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.admin.self.AdminActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/dp_5"
        android:background="@color/white">

        <TextView
            android:id="@+id/ad_tv_admin_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员："
            android:textSize="@dimen/text_18"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_admin"
            />

        <TextView
            android:id="@+id/ad_tv_admin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ad_tv_admin_hint"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_change_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_admin"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_change_recommend"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_check_video_class"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_change_recommend"
            />

        <TextView
            android:id="@+id/ad_tv_change_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理健身资讯"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_change_recommend"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_change_recommend"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_change_user_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_change_recommend"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_change_user_detail"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_user_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_change_user_detail"
            />

        <TextView
            android:id="@+id/ad_tv_change_user_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理用户"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_change_user_detail"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_change_user_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_check_video_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_change_user_detail"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_check_video_class"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_recommend"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_check_video_class"
            />

        <TextView
            android:id="@+id/ad_tv_check_video_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理健身视频"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_check_video_class"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_check_video_class"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_manage_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_check_video_class"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_manage_shop"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/shop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_manage_shop"
            />

        <TextView
            android:id="@+id/ad_tv_manage_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理积分商城"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_manage_shop"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_manage_shop"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_change_admin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_manage_shop"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_change_admin_password"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/change_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_change_admin_password"
            />

        <TextView
            android:id="@+id/ad_tv_change_admin_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改管理员密码"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_change_admin_password"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_change_admin_password"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_cl_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ad_cl_change_admin_password"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ad_iv_exit"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/exit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ad_tv_exit"
            />

        <TextView
            android:id="@+id/ad_tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全退出"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_18"
            app:layout_constraintLeft_toRightOf="@+id/ad_iv_exit"
            app:layout_constraintTop_toTopOf="@+id/ad_iv_exit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>